<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    >
    <com.example.cxcxk.xianyuetu.view.componts.AutoSwipeRefreshLayout
        android:id="@+id/refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.example.cxcxk.xianyuetu.view.componts.LoadMoreRecycleView
            android:id="@+id/recycle_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/fab_margin"></com.example.cxcxk.xianyuetu.view.componts.LoadMoreRecycleView>
    </com.example.cxcxk.xianyuetu.view.componts.AutoSwipeRefreshLayout>
    <com.example.cxcxk.xianyuetu.view.componts.ProblemLayout
        android:id="@+id/problem_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"></com.example.cxcxk.xianyuetu.view.componts.ProblemLayout>
    <ImageView
        android:id="@+id/refresh_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_refresh_black_24dp"
        android:layout_centerInParent="true"
        android:visibility="gone"/>
</RelativeLayout>